#!/bin/bash

# Check if data.json exists
if [ ! -f data.json ]; then
  echo "Error: data.json file not found. Run the API request script first."
  exit 1
fi

# Extract and clean fields
name=$(jq -r '.name' data.json | sed 's/.*/\u&/')  # Capitalize first letter
height=$(jq '.height' data.json | awk '{printf "%.1f", $1 / 10}') # dm to meters
weight=$(jq '.weight' data.json | awk '{printf "%.0f", $1 / 10}') # hg to kg
type=$(jq -r '.types[0].type.name' data.json | sed 's/.*/\u&/')   # Capitalize

# Output formatted sentence
echo "$name is of type $type, weighs ${weight}kg, and is ${height}m tall."
